  <ItemGroup>
    <ProjectReference Include="..\MonTilt.Core\MonTilt.Core.csproj" />
    <ProjectReference Include="..\MonTilt.Driver\MonTilt.Driver.csproj" />
  </ItemGroup>

</Project>